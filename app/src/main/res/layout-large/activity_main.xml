<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:name="com.example.nt2.ui.fragment.AllArticalsFragment"
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"></FrameLayout>

        <fragment
            android:name="com.example.nt2.ui.fragment.DetailesFragment"
            android:id="@+id/fragment_detailes_large"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_detailes"
            android:layout_weight="1"></fragment>
    </LinearLayout>
</LinearLayout>